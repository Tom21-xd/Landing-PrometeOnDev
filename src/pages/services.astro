---
import Layout from "../layouts/Layout.astro";
import ServiveTitle from "../components/services/atoms/serviveTitle.astro";
import ServiceOverView from "../components/services/organims/serviceOverView.astro";
import DetailService from "../components/services/organims/detailService.astro";

const servicioDiseno = {
  imageSrc: "/images/services/design.webp",
  title: "Diseño Web",
  alt: "Ilustración de diseño web",
  infoCards: [
    {
      title: "Diseño Responsivo",
      description:
        "Creamos sitios web que se adaptan perfectamente a todos los dispositivos, desde móviles hasta pantallas de escritorio.",
    },
    {
      title: "UX/UI Avanzado",
      description:
        "Implementamos las últimas tendencias en experiencia de usuario e interfaz para hacer que tu sitio no solo se vea bien, sino que también sea intuitivo.",
    },
    {
      title: "Performance Optimizado",
      description:
        "Optimizamos cada aspecto de tu sitio web para garantizar tiempos de carga rápidos, lo que mejora el SEO y reduce la tasa de rebote.",
    },
  ],
};

const servicioDesarrollo = {
  imageSrc: "/images/services/software.webp",
  title: "Desarrollo de Aplicaciones",
  alt: "Ilustración de desarrollo de aplicaciones",
  infoCards: [
    {
      title: "Aplicaciones Web",
      description:
        "Desarrollamos aplicaciones web modernas y escalables utilizando las últimas tecnologías y frameworks para maximizar el rendimiento.",
    },
    {
      title: "Soluciones a Medida",
      description:
        "Creamos soluciones personalizadas que se adaptan perfectamente a tus necesidades específicas y a los requerimientos de tu negocio.",
    },
    {
      title: "Tecnología de Punta",
      description:
        "Utilizamos las tecnologías más avanzadas para garantizar que tu aplicación sea rápida, segura y fácil de mantener a largo plazo.",
    },
  ],
};
---

<Layout>
  <ServiveTitle title="Nuestros Servicios" />

  <ServiceOverView />

  <DetailService
    imageSrc={servicioDiseno.imageSrc}
    title={servicioDiseno.title}
    alt={servicioDiseno.alt}
    infoCards={servicioDiseno.infoCards}
  />

  <DetailService
    imageSrc={servicioDesarrollo.imageSrc}
    title={servicioDesarrollo.title}
    alt={servicioDesarrollo.alt}
    infoCards={servicioDesarrollo.infoCards}
    reversed={true}
  />
</Layout>
