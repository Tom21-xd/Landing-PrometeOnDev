---
import ServiceImage from "../atoms/serviceImage.astro";
import ServiceContentCard from "../molecules/serviceContentCard.astro";

interface Props {
  id: string;
  icon: string;
  title: string;
  description: string;
  url?: string;
}

const { id, icon, title, description, url = "#" } = Astro.props;
---

<div
  class="group flex flex-col items-center bg-gray-50 dark:bg-dark-background-light rounded-xl shadow-gray-700 dark:shadow-gray-500 shadow-md transform transition duration-300 hover:-translate-y-3 max-w-xs min-h-96 w-full mx-auto group cursor-pointer"
>
  <ServiceImage src={icon} alt={title} />

  <ServiceContentCard
    id={id}
    title={title}
    description={description}
    url={url}
  />
</div>
