---
import ServiceCard from "../molecules/serviceCard.astro";
---

<section id="services-section" class="py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      <ServiceCard
        icon="/diseno.png"
        title="Dise침o Web"
        description="Creamos experiencias unicas para el usuario"
        url="/servicios/diseno-web"
      />
      <ServiceCard
        icon="/desarrollo.jpg"
        title="Desarrollo"
        description="Desarrollamos aplicaciones web y moviles"
        url="/servicios/desarrollo"
      />
      <ServiceCard
        icon="/inteligencia.png"
        title="Inteligencia de negocio"
        description="Se desarrollan dashboards interactivos"
        url="/servicios/inteligencia-negocio"
      />
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Seleccionar todas las tarjetas dentro de la secci칩n
            const cards = document.querySelectorAll('#services-section .service-card');
            
            // Animar cada tarjeta con un retraso diferente
            cards.forEach((card, index) => {
              setTimeout(() => {
                card.classList.add('animate');
              }, index * 200); // 200ms de retraso entre cada tarjeta
            });
            
            // Desconectar el observer una vez que se han aplicado las animaciones
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.2, // Activar cuando al menos el 20% de la secci칩n sea visible
        rootMargin: '0px 0px -100px 0px' // Margen negativo para activar un poco antes
      }
    );

    // Observar la secci칩n de servicios
    const servicesSection = document.getElementById('services-section');
    if (servicesSection) {
      observer.observe(servicesSection);
    }
  });
</script>