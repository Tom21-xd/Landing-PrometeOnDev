---
import ServiceTitle from "../atoms/serviceTitle.astro";
import ServiceDescription from "../atoms/serviceDescription.astro";
import ServiceButton from "../atoms/serviceButton.astro";

interface Props {
  id: string;
  title: string;
  description: string;
  url?: string;
}

const { id, title, description, url = "#" } = Astro.props;
---

<div class="p-6 flex flex-col items-center text-center">
  <ServiceTitle title={title} />

  <ServiceDescription description={description} />

  <ServiceButton url={id} title={title} />
</div>
