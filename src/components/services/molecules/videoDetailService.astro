---
import VidDetailService from "../atoms/vidDetailService.astro";
import TitleDetailService from "../atoms/titleDetailService.astro";

export interface Props {
  imageSrc: string;
  title: string;
  alt?: string;
  className?: string;
}

const { imageSrc, title, alt, className = "" } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-5 video-detail-service ${className}`}>
  <VidDetailService 
    src={imageSrc}
    title={title}
    alt={alt || `Imagen de ${title}`}
    className="mb-4"
  />
  <TitleDetailService title={title} size="large" className="text-center" />
</div>

<style>
  .video-detail-service {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .video-detail-service:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>