---
export interface Props {
  src: string;
  title?: string;
  alt?: string;
  className?: string;
}

const { src, title, alt = "Imagen de servicio", className = "" } = Astro.props;
---

<div class={`image-detail-service-container ${className}`}>
  <img 
    src={src} 
    alt={alt || title}
    class="service-image" 
  />
  {title && <p class="sr-only">{title}</p>}
</div>

<style>
  .image-detail-service-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  .service-image {
    display: block;
    width: 100%;
    height: 100%;
    transition: transform 0.3s ease;
    object-fit: cover;
  }
  
  .image-detail-service-container:hover .service-image {
    transform: scale(1.05);
  }

  :global(.dark) .image-detail-service-container {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
  }
</style>