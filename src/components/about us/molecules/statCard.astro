---
import StatValue from "../atoms/statValue.astro";
import StatLabel from "../atoms/statLabel.astro";

const { value, label } = Astro.props;
---

<div class="relative flex flex-col items-center">
  <StatValue value={value} />
  <StatLabel label={label} />

  <script>
    if (typeof window !== "undefined") {
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target;
            const target = parseInt(el.dataset.target, 10);
            let current = 0;
            const step = Math.ceil(target / 60);

            const update = () => {
              current += step;
              el.textContent = current >= target ? target : current;
              if (current < target) requestAnimationFrame(update);
            };

            requestAnimationFrame(update);
            obs.unobserve(el);
          }
        });
      });

      window.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".stat-value").forEach(el => observer.observe(el));
      });
    }
  </script>
</div>
