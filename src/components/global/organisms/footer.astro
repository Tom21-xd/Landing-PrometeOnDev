---
import NavItem from "../atoms/navItem.astro";
import SocialIconFooter from "../atoms/socialIconFooter.astro";
import LogoButton from "../atoms/logoButton.astro";

const navItems = [
  { label: "Inicio", href: "/" },
  { label: "Sobre nosotros", href: "/about" },
  { label: "Servicios", href: "/services" },
  { label: "Contacto", href: "/contact" },
  { label: "Portfolio", href: "/portfolio" },
];

const socialLinks = [
  {
    href: "https://www.facebook.com/profile.php?id=61575255925454",
    iconClass: "fa-brands fa-facebook",
    ariaLabel: "Facebook",
  },
  {
    href: "https://www.linkedin.com/company/prometeondev/",
    iconClass: "fa-brands fa-linkedin",
    ariaLabel: "LinkedIn",
  },
  { href: "#", iconClass: "fa-brands fa-instagram", ariaLabel: "Instagram" },
  {
    href: "https://wa.me/573204054497",
    iconClass: "fa-brands fa-whatsapp",
    ariaLabel: "WhatsApp",
  },
];
---

<footer
  class="bg-background dark:bg-dark-background py-12 flex flex-col items-center gap-8 text-dark dark:text-white transition-colors"
>
  <LogoButton title="Prometeon" subtitle="Software Development" />

  <nav>
    <ul
      class="flex flex-wrap justify-center gap-4 md:gap-8 text-lg font-semibold"
    >
      {navItems.map((item) => <NavItem {...item} />)}
    </ul>
  </nav>

  <div class="flex flex-wrap justify-center gap-4 md:gap-6">
    {socialLinks.map((link) => <SocialIconFooter {...link} />)}
  </div>

  <hr
    class="w-full max-w-screen-md border-t border-dark dark:border-white opacity-20"
  />

  <p class="text-center text-sm opacity-70">
    Â© 2025 Prometeon. All Rights Reserved.
  </p>
</footer>
