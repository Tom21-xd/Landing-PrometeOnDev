---
interface NavItemProps {
  href: string;
  label: string;
  active?: boolean;
}

const { href, label, active = false } = Astro.props as NavItemProps;
---

<a
  href={href}
  class={`relative px-4 py-2 text-sm font-semibold transition-all group ${
    active
      ? "text-primary border-b-2 border-primary"
      : "text-dark dark:text-white"
  } hover:text-primary`}
>
  {label}
  <span
    class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 ease-out group-hover:w-full"
  ></span>
</a>
