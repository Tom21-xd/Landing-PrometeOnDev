---
interface Props {
  href: string;
  iconClass: string;
  ariaLabel: string;
}

const { href, iconClass, ariaLabel } = Astro.props as Props;
---

<a
  href={href}
  title={ariaLabel}
  aria-label={ariaLabel}
  target="_blank"
  rel="noopener noreferrer"
  class="text-2xl hover:text-primary hover:-translate-y-2 transition-all duration-300 ease-out"
  aria-label={ariaLabel}
>
  <i class={iconClass}></i>
</a>
