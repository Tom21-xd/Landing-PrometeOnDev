---
const { href, label } = Astro.props;
const isActive = Astro.url.pathname.startsWith(href);
---

<a
  href={href}
  class={`text-md  transition-all duration-300 hover:text-background-light dark:hover:text-dark-background-light ${
    isActive
      ? "text-dark-darker dark:text-dark-dark font-semibold"
      : "text-dark dark:text-dark-dark"
  }`}
>
  {label}
</a>
