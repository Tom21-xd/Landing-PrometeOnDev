---
import ContactIcon from "../atoms/contactIcon.astro";
import ContactText from "../atoms/contactText.astro";

interface Props {
  icon: string;
  label: string;
  value: string;
  href: string;
  ariaLabel: string;
}

const { icon, label, value, href, ariaLabel } = Astro.props as Props;
---

<div class="flex items-center gap-4 group h-auto">
  <ContactIcon icon={icon} />

  <ContactText label={label} value={value} href={href} ariaLabel={ariaLabel} />
</div>
