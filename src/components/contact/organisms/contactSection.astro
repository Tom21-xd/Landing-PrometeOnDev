---
import ContactForm from "../molecules/contactForm.astro";
import ContactInfo from "./contactInfo.astro";
---

<section
  class="relative py-10 px-6 md:pl-16 md:pr-4 bg-background dark:bg-dark-background"
>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 md:gap-6">
    <ContactInfo />

    <div class="relative hidden md:block -translate-x-20 mx-auto w-full z-10">
      <ContactForm />
    </div>
  </div>

  <div class="md:hidden">
    <div class="bg-white dark:bg-dark-background py-6 rounded-2xl shadow-lg">
      <ContactForm />
    </div>
  </div>
</section>
