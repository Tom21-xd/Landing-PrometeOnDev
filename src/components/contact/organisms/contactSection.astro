---
import ContactForm from "../molecules/contactForm.astro";
import ContactInfo from "../molecules/contactInfo.astro";
---

<section
  class="relative py-20 px-6 md:px-20 bg-background dark:bg-dark-background"
>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="p-8">
      <ContactInfo />
    </div>

    <div class="relative hidden md:block">
      <div
        class="absolute -top-24 left-0 right-0 mx-auto w-full bg-white dark:bg-dark-background p-8 rounded-2xl shadow-2xl z-10"
      >
        <ContactForm />
      </div>
    </div>
  </div>

  <div class="mt-10 md:hidden">
    <div class="bg-white dark:bg-dark-background p-6 rounded-2xl shadow-lg">
      <ContactForm />
    </div>
  </div>
</section>
