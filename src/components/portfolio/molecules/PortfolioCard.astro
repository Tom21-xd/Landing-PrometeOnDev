---
interface PortfolioCardProps {
  id: string;
  title: string;
  image: string;
  image2: string;
  type: string;
  description: string;
  link?: string;
}

const { id, title, image, image2, type, description, link } =
  Astro.props as PortfolioCardProps;
---

<div
  class="group flex flex-col md:flex-row gap-8 mb-8 hover:scale-105 transition-transform duration-200 ease-in-out"
>
  <div
    class="relative overflow-hidden hover:bg-dark-background dark:hover:bg-background rounded-lg shadow-lg md:w-2/3"
  >
    <!-- Imagen Principal Oculta al Hover -->
    <img
      src={image}
      alt={title}
      class="w-full h-auto transition-opacity duration-300 group-hover:opacity-0"
    />

    <!-- Imagen que se acerca al hacer hover -->
    <img
      src={image2}
      alt={title}
      class="absolute inset-0 w-full h-full object-contain scale-80 opacity-0 group-hover:opacity-100 group-hover:scale-90 transition-all duration-500 ease-in-out"
      style="object-fit: contain;"
    />
  </div>

  <div
    class="flex flex-col justify-center bg-color-background-light p-8 md:w-1/3 relative group"
  >
    <h3
      class="text-3xl font-bold text-color-dark mb-2 group-hover:text-color-primary transition-all duration-300"
    >
      {title}
    </h3>

    <p
      class="text-color-dark mb-4 group-hover:text-gray-900 dark:group-hover:text-gray-200"
    >
      {type}
    </p>

    <p
      class="text-color-dark mb-4 group-hover:text-gray-900 dark:group-hover:text-gray-200"
    >
      {description}
    </p>

    {
      Astro.props.link && (
        <a
          href={link}
          class="text-color-primary font-semibold group-hover:text-black dark:group-hover:text-white underline"
          target="_blank"
          rel="noopener noreferrer"
        >
          Ir a conocer &rarr;
        </a>
      )
    }
  </div>
</div>
