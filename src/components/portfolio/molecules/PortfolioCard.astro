<div class="group flex flex-col md:flex-row gap-8 mb-8">
  <div class="relative overflow-hidden rounded-lg shadow-lg md:w-2/3">
    <!-- Imagen Principal Oculta al Hover -->
    <img
      src={Astro.props.image}
      alt={Astro.props.title}
      class="w-full h-auto transition-opacity duration-300 group-hover:opacity-0"
    />

    <!-- Imagen que se acerca al hacer hover -->
    <img
      src={Astro.props.image2}
      alt={Astro.props.title}
      class="absolute inset-0 w-full h-full object-contain scale-80 opacity-0 group-hover:opacity-100 group-hover:scale-90 transition-all duration-500 ease-in-out"
      style="object-fit: contain;"
    />
  </div>
  <div
    class="flex flex-col justify-center bg-color-background-light p-8 md:w-1/3 relative group"
  >
    <h3
      class="text-3xl font-bold text-color-dark mb-2 group-hover:text-color-primary transition-all duration-300"
    >
      {Astro.props.title}
    </h3>
    <div
      class="opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
      <p class="text-color-dark mb-4 group-hover:text-gray-200">
        {Astro.props.type}
      </p>
      <p class="text-color-dark mb-4 group-hover:text-gray-200">
        {Astro.props.description}
      </p>
      {
        Astro.props.link && (
          <a
            href={Astro.props.link}
            class="text-color-primary font-semibold group-hover:text-white underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ir a conocer &rarr;
          </a>
        )
      }
    </div>
  </div>
</div>
