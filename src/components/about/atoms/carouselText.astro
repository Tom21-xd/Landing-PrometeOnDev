---
interface Props {
  text: string;
}

const { text } = Astro.props as Props;
---

<div
  class="carousel-text px-8 whitespace-nowrap text-[clamp(3rem,10vw,8rem)] font-extrabold leading-[0.9] tracking-[-0.05em] text-transparent select-none flex-shrink-0"
>
  {text}
</div>

<style>
  .carousel-text {
    -webkit-text-stroke: 2px #000a30;
    text-stroke: 2px #000a30;
  }

  :is(.dark .carousel-text) {
    -webkit-text-stroke: 1px white;
    text-stroke: 1px white;
  }
</style>
