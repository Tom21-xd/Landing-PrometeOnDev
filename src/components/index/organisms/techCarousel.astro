---
import TechLogo from '../atoms/techLogo.astro';

const logos = [
  { name: 'TypeScript', image: '/logos/typescript.svg' },
  { name: 'Node.js', image: '/logos/nodejs.svg' },
  { name: 'MongoDB', image: '/logos/mongodb.svg' },
  { name: 'PostgreSQL', image: '/logos/postgresql.svg' },
  { name: 'Python', image: '/logos/python.svg' },
  { name: 'Nodejs', image: '/logos/nodejs.svg' },
  { name: 'html5', image: '/logos/html5.svg' },
  { name: 'nestJs', image: '/logos/nestjs.svg' },
  { name: 'mysql', image: '/logos/mysql.svg' },
  { name: 'nextjs', image: '/logos/nextjs_icon_dark.svg' },
  { name: 'Javascript', image: '/logos/javascript.svg' }
];
---

<div class="logo-carousel-container bg-black py-8">
  <div class="logo-track">
    {logos.map((logo) => (
      <TechLogo name={logo.name} image={logo.image} />
    ))}
    {/* Duplicamos los logos para el efecto infinito */}
    {logos.map((logo) => (
      <TechLogo name={logo.name} image={logo.image} />
    ))}
  </div>
</div>

<style>
  .logo-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 2rem 0;
  }

  .logo-track {
    display: flex;
    animation: scroll 10s linear infinite;
    width: fit-content;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .logo-track:hover {
    animation-play-state: paused;
  }
</style>