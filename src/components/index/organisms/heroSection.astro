---
import TypingEffect from "../atoms/TypingEffect.astro";
import ScrollButton from "../atoms/ScrollButton.astro";
const {
  title = "Donde las ideas encuentran\n prop√≥sito",
  imageUrl = "/images/home/hero-section.webp",
} = Astro.props;
---

<section
  class="relative flex flex-col items-center justify-center w-full min-h-screen overflow-hidden"
>
  <img
    src={imageUrl}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover"
  />
  <h1 class="relative z-10 text-center mb-40">
    <TypingEffect text={title} typingSpeed={80} delay={500} />
  </h1>

  <ScrollButton label="Descubrir" targetId="services" />
</section>
