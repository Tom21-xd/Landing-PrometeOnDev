---
import ContactTittle from "../atoms/contactTittle.astro";
import ContactText from "../atoms/contactText.astro";
import CTAButton from "@/components/index/atoms/CTAButton.astro";

const backgroundVideo = "/videos/home/contact-section.webm";
---

<section
  class="relative w-full min-h-screen overflow-hidden bg-gradient-to-b from-[var(--color-dark-dark)] to-dark-background"
>
  <video
    src={backgroundVideo}
    autoplay
    loop
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-10"></video>

  <div
    class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 text-center gap-8"
  >
    <ContactTittle tittle="PrometeonDev" />

    <CTAButton />

    <ContactText
      text="Se parte de nuestro equipo y construyamos juntos el futuro digital."
    />
  </div>
</section>
