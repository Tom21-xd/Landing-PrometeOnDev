---
interface Props {
  label: string;
  targetId: string;
}

const { label, targetId } = Astro.props;
---

<div 
  class="scroll-button-container" 
  role="button" 
  tabindex="0"
  onclick={`document.getElementById('${targetId}').scrollIntoView({ behavior: 'smooth' });`}
>
  <span class="scroll-button-label">{label}</span>
  <svg xmlns="http://www.w3.org/2000/svg" class="scroll-button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
  </svg>
</div>

<style>
.scroll-button-container {
  position: absolute;
  bottom: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  animation: bounce 1.5s infinite;
}

.scroll-button-label {
  font-size: 1.5rem;
  font-weight: 900;
  color: var(--color-accent);
  margin-bottom: 8px;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.8), 0 0 20px rgba(0, 0, 0, 0.6);
}

.scroll-button-icon {
  width: 40px;
  height: 40px;
  color: var(--color-accent);
  transition: transform 0.3s ease;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.8), 0 0 20px rgba(0, 0, 0, 0.6);
}

.scroll-button-container:hover .scroll-button-icon {
  transform: translateY(5px);
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}
</style>
