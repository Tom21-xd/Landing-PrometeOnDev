---
interface Props {
  text: string;
  link: string;
  bgColor?: string;
  textColor?: string;
}

const { text, link, bgColor = "var(--color-accent)", textColor = "#ffffff" } = Astro.props;
---

<a href={link} class="cta-button" style={`background-color: ${bgColor}; color: ${textColor};`}>
  {text}
</a>

<style>
.cta-button {
  display: inline-block;
  padding: 1rem 2rem;
  font-size: 1.5rem;
  font-weight: 600;
  border-radius: 0.5rem;
  text-align: center;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.cta-button:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
}

.cta-button:active {
  transform: translateY(0px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

@media (max-width: 768px) {
  .cta-button {
    font-size: 1.25rem;
    padding: 0.75rem 1.5rem;
  }
}
</style>
