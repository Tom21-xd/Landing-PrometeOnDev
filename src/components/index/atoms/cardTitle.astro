---
interface Props {
  title: string;
  index: number;
}

const { title, index } = Astro.props as Props;
---

<div
  class="relative group text-primary dark:text-white flex items-center overflow-visible"
>
  <span
    class="font-primary font-semibold text-xl transition-all duration-300 whitespace-nowrap group-hover:translate-x-8"
  >
    {title}
  </span>

  <span
    class="absolute left-0 opacity-0 font-primary font-semibold text-xl transition-all duration-300 whitespace-nowrap group-hover:opacity-100 group-hover:translate-x-0 translate-x-[-100%]"
  >
    {index < 10 ? `0${index}.` : `${index}.`}
  </span>
</div>
