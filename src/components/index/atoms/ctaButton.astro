---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="flex text-lg items-center bg-gradient-to-tr from-primary-light via-primary to-primary-dark text-background dark:text-dark-background px-16 sm:px-12 md:px-16 py-5 rounded-xl font-semibold transition-all duration-300 ease-in-out transform hover:shadow-[0_0_10px_1px_rgba(0,0,0,0.2)] hover:shadow-primary-light"
>
  {text}
</a>
