---
interface Props {
  src?: string;
  alt?: string;
  title?: string;
  className?: string;
}

const {
  src = "/global/logo-blanco-texto.webp",
  alt = "PrometeonDev - Software Development",
  title = alt,

  className = "",
} = Astro.props as Props;
---

<img
  src={src}
  alt={alt}
  title={title}
  loading="lazy"
  class={`w-full md:max-w-[60%] xl:max-w-[50%] h-auto ${className}`}
/>
