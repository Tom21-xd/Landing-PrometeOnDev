---
import ImageCard from "../atoms/imageCard.astro";
import CardTitle from "../atoms/cardTitle.astro";
import HoverLine from "../atoms/hoverLine.astro";
import ArrowButton from "../atoms/arrowButton.astro";

interface Props {
  url: string;
  imageSrc: string;
  title: string;
  index: number;
}

const { url, imageSrc, title, index } = Astro.props as Props;
---

<a href={url} class="group relative flex flex-col gap-2 cursor-pointer">
  <ImageCard imageSrc={imageSrc} title={title} />

  <div class="flex items-center justify-between pt-2">
    <CardTitle title={title} index={index} />

    <ArrowButton />
  </div>

  <div class="pt-2">
    <HoverLine />
  </div>
</a>
