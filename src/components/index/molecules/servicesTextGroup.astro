---
import ViewMoreButton from "../atoms/viewMoreButton.astro";

interface Props {
  name: string;
  title: string;
  description: string;
  url: string;
  text: string;
}

const { name, title, description, url, text } = Astro.props as Props;
---

<div
  class="flex flex-col md:flex-row gap-4 items-center justify-between w-full text-left"
>
  <h2 class="text-3xl font-semibold text-primary dark:text-white">{name}</h2>

  <p
    class="text-gray-900 dark:text-gray-400 md:max-w-2/5 text-justify md:text-left"
  >
    {description}
  </p>

  <ViewMoreButton text={text} url={url} title={title} />
</div>
